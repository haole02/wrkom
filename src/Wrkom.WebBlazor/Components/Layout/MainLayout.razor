@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="d-flex flex-grow-1 gap-3 p-3 vh-100">
    <MudPaper Elevation="2" Class="overflow-hidden py-3" Width="20%">
        <NavMenu></NavMenu>
    </MudPaper>

    <MudPaper Elevation="2" Width="80%" Class="p-3">
        @Body
    </MudPaper>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
